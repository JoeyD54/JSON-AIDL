<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/placement_center"
        android:layout_centerHorizontal="true"
        android:paddingStart="2sp"
        android:paddingEnd="2sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/api_called_label"
        android:text="API called:"
        android:textColor="@android:color/black"
        android:layout_toStartOf="@id/placement_center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/city_label"
        android:text="City: "
        android:textColor="@android:color/black"
        android:layout_toStartOf="@id/placement_center"
        android:layout_below="@id/log_display"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/city_text"
        android:text="placeholder"
        android:textColor="@android:color/black"
        android:layout_toEndOf="@id/placement_center"
        android:layout_below="@id/log_display"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temperature_label"
        android:text="Temperature: "
        android:textColor="@android:color/black"
        android:layout_toStartOf="@id/placement_center"
        android:layout_below="@id/city_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temperature_text"
        android:text="placeholder"
        android:textColor="@android:color/black"
        android:layout_toEndOf="@id/placement_center"
        android:layout_below="@id/city_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/is_connected_text"
        android:text="placeholder Text"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@id/placement_center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bind_button"
        android:id="@+id/bind_button"
        android:layout_below="@id/placement_center"
        android:layout_toStartOf="@id/placement_center"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unbind_button"
        android:id="@+id/unbind_button"
        android:layout_toEndOf="@id/placement_center"
        android:layout_below="@id/placement_center"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/log_display"
        android:text=""
        android:layout_below="@id/parse_data"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/parse_data"
        android:text="@string/parse_data"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bind_button"
        />

</RelativeLayout>